         </children>
      </VBox>
      <VBox alignment="CENTER" maxWidth="350.0" minWidth="350.0" prefWidth="350.0" spacing="5.0">
         <children>
            <Label maxWidth="-Infinity" minWidth="-Infinity" prefWidth="320.0" text="Password" />
